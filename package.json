{
  "name": "mvcs",
  "version": "dev",
  "private": true,
  "description": "MV* framework for web apps inspired by robotlegs framework.",
  "keywords": [
    "event-bus",
    "event-emitter",
    "ioc",
    "logger",
    "module",
    "mv*",
    "mvc",
    "mvcs",
    "robotlegs",
    "typescript"
  ],
  "homepage": "https://github.com/gavar/mvcs#readme",
  "bugs": {
    "url": "https://github.com/gavar/mvcs/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gavar/mvcs.git"
  },
  "license": "ISC",
  "author": {
    "name": "Max Stankevich",
    "email": "max.stankevich.me@gmail.com",
    "url": "https://github.com/gavar"
  },
  "main": "index.js",
  "workspaces": {
    "packages": [
      "@types/*",
      "packages/*"
    ]
  },
  "scripts": {
    "build": "yarn clean && yarn wsrun --bin npm -c pack",
    "clean": "rimraf out && yarn wsrun -c clean",
    "format:pack": "fixpack && sort-package-json && yarn wsrun -c format:pack",
    "release": "semantic-release --no-ci",
    "sync:pack": "copycat-pack -r && typesync && yarn && yarn format:pack",
    "test": "jest",
    "wsrun": "wsrun --stages -p @mvcs/*"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@wrench/commitlint-config"
    ]
  },
  "jest": {
    "preset": "ts-jest"
  },
  "dependencies": {
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.1",
    "@wrench/commitlint-config": "beta",
    "@wrench/copycat-package": "beta",
    "@wrench/roll": "beta",
    "@wrench/ts-config": "^1.0.0-beta.1",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "rollup": "^1.20.2",
    "ts-jest": "^24.0.2",
    "tstt": "^1.0.4",
    "typescript": "^3.5.3",
    "wsrun": "^5.0.0"
  },
  "commonDependencies": {
    "@emulsy/annotation": "beta",
    "@emulsy/lang": "beta"
  }
}
